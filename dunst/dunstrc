[global]
    # Position, size, and format of notifications
    monitor = 0
    geometry = "300x5-30+60"
    width = 300
    height = 100
    origin = top-right
    offset = 30x60

    # Font and text formatting
    font = JetBrainsMono Nerd Font 10
    format = "<b>%s</b>\n%b"
    alignment = left
    vertical_alignment = center
    word_wrap = yes

    # Spacing and appearance
    separator_height = 2
    padding = 8
    horizontal_padding = 8
    frame_width = 2
    corner_radius = 5  # Match our picom corner radius

    # Icons
    icon_position = left
    max_icon_size = 32

[frame]
    color = "#cba6f7"  # Use Catppuccin Mauve for the frame

# --- Catppuccin Mocha Theming ---

[urgency_low]
    background = "#1e1e2e"  # Base
    foreground = "#cdd6f4"  # Text
    timeout = 5

[urgency_normal]
    background = "#1e1e2e"  # Base
    foreground = "#cdd6f4"  # Text
    timeout = 10

[urgency_critical]
    background = "#f38ba8"  # Red
    foreground = "#11111b"  # Crust (for high contrast)
    frame_color = "#f38ba8" # Red
    timeout = 0
